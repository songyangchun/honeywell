<?xml version="1.0" encoding="utf-8"?><!-- view的各种状态(正常无焦点,焦点,onclick按下、放开等等) -->
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- 选中未up时 -->
    <item android:state_pressed="true">
        <shape>
            <!-- 按钮四个圆角       	radius:半径 -->
            <corners android:bottomLeftRadius="15px"
                     android:bottomRightRadius="15px"
                     android:topLeftRadius="15px"
                     android:topRightRadius="15px" />
                <solid android:color="@color/red_deepdeep"></solid>
            <!-- 按钮文字和边缘距离(内边距) -->
            <padding android:bottom="5dp"   android:top="5dp" />
        </shape>
    </item>
    <!-- 选中未up时 -->
    <item android:state_enabled="false">
        <shape>
            <!-- 按钮四个圆角       	radius:半径 -->
