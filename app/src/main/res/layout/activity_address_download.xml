<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">
    <include layout="@layout/toolbar_layout"/>

    <View
        android:id="@+id/son_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>

    <include layout="@layout/activity_singleaddress_blehead"
             android:layout_width="match_parent"
             android:layout_height="34dp"
             android:layout_below="@+id/son_line1"/>
    <com.honeywell.honeywellproject.WidgeView.SoftInputRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/ll_singleaddress_top"
        android:layout_above="@+id/rl_progress">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_addressdownload"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="2dp"/>
    </com.honeywell.honeywellproject.WidgeView.SoftInputRelativeLayout>
    <RelativeLayout
        android:id="@+id/rl_progress"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:visibility="visible"
        android:layout_marginTop="@dimen/dp_4"
        android:layout_above="@+id/line_bottom">
        <TextView
            android:id="@+id/tv_progress1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50"
            android:layout_alignTop="@+id/tv_progress2"
            android:textColor="@color/red_textee3124"
            android:layout_toLeftOf="@+id/tv_progress2"/>
        <TextView
            android:id="@+id/tv_progress2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="/50"
            android:layout_marginRight="6dp"
            android:textColor="@color/gray_text686b72"
            android:layout_above="@+id/progress"
            android:layout_alignParentRight="true"/>
        <ProgressBar
            android:id="@+id/progress"
            android:layout_width="match_parent"
            android:layout_height="12dp"
            android:layout_margin="6dp"
            android:layout_alignParentBottom="true"
            style="?android:attr/progressBarStyleHorizontal"
            android:progressDrawable="@drawable/progress_address_bg"/>
    </RelativeLayout>
    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"/>

    <LinearLayout
        android:id="@+id/ll_bottom1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_output"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/output_44"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="导出"/>
        </LinearLayout>
        <View
            android:layout_width="0.5dp"
            android:layout_height="match_parent"
            android:background="#b8b8b8"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"/>
        <LinearLayout
            android:id="@+id/ll_download"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/address_download_44"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="开始下载"/>

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/ll_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="gone"
        android:layout_marginBottom="138dp"
        android:background="#Af7F7F7F" />
    <LinearLayout
        android:id="@+id/bottom_select"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="-138dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_bf">
        <TextView
            android:id="@+id/bottom_select1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="保存至手机"
            android:background="@drawable/mail_btn_selecter"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_shadow_shadow"/>
        <TextView
            android:id="@+id/bottom_select2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="发送至邮件接收人"
            android:background="@drawable/mail_btn_selecter"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/gray_shadow_shadow"/>
        <TextView
            android:id="@+id/bottom_select3"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="取消"
            android:background="@drawable/mail_btn_selecter"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:gravity="center"/>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/bottom_mail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:fitsSystemWindows="true"
        android:layout_marginBottom="-138dp"
        android:layout_alignParentBottom="true"
        android:background="@color/white_bf">
        <TextView
            android:id="@+id/bottom_mail1"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:text="填写邮件接收人邮箱"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/gray_shadow"/>
        <EditText
            android:id="@+id/bottom_mail2"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:hint="xxxxxxx@xxx.com"
            android:background="@null"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"
            android:gravity="center"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="6dp"
            android:background="@color/gray_shadow_shadow"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/bottom_mail_select_sure"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="发送"
                android:background="@drawable/mail_btn_selecter"
                android:textColor="@color/gray_text686b72"
                android:textSize="16sp"
                android:gravity="center"/>
            <View
                android:layout_width="0.5dp"
                android:layout_height="match_parent"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="8dp"
                android:background="@color/gray_shadow_shadow"/>
            <TextView
                android:id="@+id/bottom_mail_select_cacel"
                android:layout_width="0dp"
                android:layout_height="44dp"
                android:layout_weight="1"
                android:text="取消"
                android:background="@drawable/mail_btn_selecter"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:gravity="center"/>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>