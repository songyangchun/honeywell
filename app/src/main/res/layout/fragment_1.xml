<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white"
    >

<!--一个LinearLayout 占比为0.290-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        >
        <com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout
            android:id="@+id/ll_light_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"

            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/left_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_dark"/>
            <ImageView
                android:id="@+id/leftrun_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leftrun_dark"/>
            <ImageView
                android:id="@+id/right_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_dark"/>
        </com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="双向指示灯"
            android:textSize="13sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="2dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:orientation="vertical"
        android:layout_weight="30">
        <com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout
            android:id="@+id/ll_light_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/left_dark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/left_dark"/>
            <ImageView
                android:id="@+id/leftrun_dark2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leftrun_dark"/>
            <ImageView
                android:id="@+id/well"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/well"/>
        </com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout>
        <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="左向指示灯"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="2dp"/>
        </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="vertical"
        android:id="@+id/linearLayout3"
        >

        <com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout
            android:id="@+id/ll_light_3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/no"/>
            <ImageView
                android:id="@+id/rightrun_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/rightrun_dark"/>
            <ImageView
                android:id="@+id/right_dark3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/right_dark"/>
        </com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout>

        <TextView
            android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="右向指示灯"
                android:layout_gravity="center_horizontal"
                android:textSize="13sp"
                android:layout_marginTop="2dp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">

    </LinearLayout>

</LinearLayout>

