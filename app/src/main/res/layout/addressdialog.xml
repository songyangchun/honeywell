<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_height="250dp"
    android:background="@drawable/dialog_corner_bg"
    android:paddingBottom="6dp"
    >

    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:text="地址修改"
        android:textSize="18sp" />
    <TextView
        android:id="@+id/initaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原地址:"
        android:textSize="15dp"
        android:layout_marginTop="70dp"
        android:layout_marginLeft="20dp"

        />


    <TextView
        android:id="@+id/newaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新地址:"
        android:textSize="15dp"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"

        />

    <EditText
        android:id="@+id/et_newaddress"
        android:layout_width="80dp"
        android:layout_height="45dp"
        android:layout_alignStart="@+id/tv_address"
        android:layout_alignLeft="@+id/tv_address"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-43dp"
        android:layout_marginLeft="-43dp"
        android:layout_marginTop="100dp"
        android:background="@null"
        android:drawableBottom="@drawable/line"
        android:gravity="center"
        android:maxLength="3"
        android:digits="0123456789"
        android:inputType="number"
        android:theme="@style/MyEditText" />
    <TextView
        android:id="@+id/dialog_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意：新地址必须为1-239内空地址位，否则修改失败"
        android:textSize="12dp"
        android:layout_marginTop="160dp"
        android:layout_marginLeft="20dp"
        android:textColor="@color/gray"

        />


    <TextView
        android:id="@+id/dialog_btn_comfirm"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="40dp"
        android:background="@drawable/bg_singleaddr_read"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingTop="8dp"
        android:paddingRight="25dp"
        android:paddingBottom="8dp"
        android:text="确定" />

    <TextView
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="100dp"
        android:layout_height="40dp"
        android:layout_alignTop="@+id/dialog_btn_comfirm"
        android:layout_alignParentRight="true"
        android:layout_marginRight="40dp"
        android:background="@drawable/bg_singleaddr_read"
        android:gravity="center"
        android:paddingLeft="25dp"
        android:paddingTop="8dp"
        android:paddingRight="25dp"
        android:paddingBottom="8dp"
        android:text="取消" />
</RelativeLayout>