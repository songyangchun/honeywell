<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    xmlns:autofit="http://schemas.android.com/apk/res-auto"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_corner_bg"
    android:paddingBottom="6dp"
    >
    <TextView
        android:id="@+id/tv_address"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="地址修改"
        android:textSize="20dp"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        />
    <TextView
        android:id="@+id/initaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="原地址:"
        android:textSize="20dp"
        android:layout_marginTop="80dp"
        android:layout_marginLeft="@dimen/dp_10"

        />


    <TextView
        android:id="@+id/newaddress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="新地址:"
        android:textSize="20dp"
        android:layout_marginTop="130dp"
        android:layout_marginLeft="@dimen/dp_10"

        />

    <EditText
        android:id="@+id/et_newaddress"
        android:layout_width="76dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tv_address"
        android:layout_marginTop="120dp"
        android:layout_alignLeft="@+id/tv_address" />
    <TextView
        android:id="@+id/dialog_txt_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="注意：新地址必须为1-239内空地址位，否则修改失败"
        android:textSize="12dp"
        android:layout_marginTop="180dp"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/gray"

        />





    <TextView
        android:id="@+id/dialog_btn_comfirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确定"
        android:gravity="center"
        android:background="@drawable/btn_save"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginLeft="15dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentBottom="true"
        />
    <TextView
        android:id="@+id/dialog_btn_cancel"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="取消"
        android:gravity="center"
        android:background="@drawable/btn_save"
        android:textColor="@color/white"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:paddingLeft="25dp"
        android:paddingRight="25dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>