<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.honeywell.honeywellproject.BleTaskModule.SingleAddress.SingleAddressActivity">



<include layout="@layout/toolbar_layout"/>

    <LinearLayout
        android:id="@+id/ll_singleaddress_top"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:orientation="horizontal"
        android:layout_below="@+id/toolbar">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_blewhite_32"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="连接状态："/>
            <TextView
                android:id="@+id/tv_singleaddress_blestate2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="未连接"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:gravity="center">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/icon_rssiwhite_32"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="信号强度："/>
            <TextView
                android:id="@+id/tv_singleaddress_blerssi2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white"
                android:text="0"/>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_single_address_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="输入单元地址"
        android:layout_marginTop="5dp"
        android:textSize="25sp"
        android:layout_below="@+id/ll_singleaddress_top"
        android:layout_centerHorizontal="true" />

    <!--
     android:shadowColor 阴影颜色
     android:shadowDx 阴影的水平偏移量
     android:shadowDy 阴影的垂直偏移量
     android:shadowRadius 阴影的范围
 -->
    <LinearLayout
        android:id="@+id/ll_ledview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_single_address_title"
        android:layout_marginTop="8dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/iv_less"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/less_96"
            android:layout_marginRight="@dimen/dp_10"
            />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="@dimen/dp_10"
            android:paddingRight="@dimen/dp_10">
            <TextView
                android:id="@+id/ledview_clock_bg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/gray_shadow_shadow"
                android:layout_centerHorizontal="true"
                android:text="tv2"
                android:textSize="110sp"/>
            <EditText
                android:id="@+id/ledview_clock_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:shadowColor="@color/gray"
                android:shadowDx="0"
                android:shadowDy="0"
                android:shadowRadius="20"
                android:background="@null"
                android:textColor="@color/black"
                android:digits="0123456789*#"
                android:layout_centerHorizontal="true"
                android:layout_alignLeft="@+id/ledview_clock_bg"
                android:layout_alignRight="@+id/ledview_clock_bg"
                android:textSize="110sp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/red"
                android:layout_below="@+id/ledview_clock_bg"
                android:layout_alignLeft="@+id/ledview_clock_bg"
                android:layout_alignRight="@+id/ledview_clock_bg"
                />
        </RelativeLayout>
        <ImageButton
            android:id="@+id/iv_add"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/add_96"
            android:layout_marginLeft="@dimen/dp_10"
            />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_btn_addr"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ll_ledview"
        android:layout_marginTop="5dp">

        <Button
            android:id="@+id/btn_el_password_read"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="读取地址"
            android:gravity="center"
            android:background="@drawable/btn_save"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:visibility="invisible"/>
        <Button
            android:id="@+id/btn_el_password_write"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="编写地址"
            android:background="@drawable/btn_save"
            android:gravity="center"
            android:layout_marginRight="30dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_weight="1"/>
    </LinearLayout>
    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_btn_addr"
        android:background="@color/gray_shadow"
        android:layout_marginTop="5dp"/>
    <TextView
        android:id="@+id/tv_enbleaddr1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击按钮获取当前回路可用地址"
        android:padding="5dp"
        android:textColor="@color/orange_half"
        android:layout_below="@+id/ll_btn_addr"
        android:layout_marginTop="10dp"
        android:visibility="gone"
        android:textSize="21sp"/>


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:visibility="gone"
        android:layout_below="@+id/tv_enbleaddr1">

        <Button
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="可用地址"
            android:gravity="center"
            android:background="@drawable/btn_save"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:layout_marginLeft="30dp"
            android:layout_weight="1"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:visibility="invisible"/>
        <View
            android:layout_width="0dp"
            android:layout_height="1dp"
            android:layout_weight="1"
            android:layout_marginRight="30dp"
            android:visibility="invisible"/>
    </LinearLayout>

    <TextView
        android:id="@+id/tv_tips_t"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/tv_tips"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/orange_half"
        android:text="tips:"
        android:textSize="21sp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:layout_alignLeft="@+id/tv_tips"/>
    <TextView
        android:id="@+id/tv_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginLeft="@dimen/dp_10"
        android:textColor="@color/gray"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:text="@string/tips"
        android:textSize="17sp"
        android:layout_alignParentLeft="true"
        android:gravity="left"
        android:layout_marginBottom="3dp"/>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_enbleaddr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/line1"
        android:layout_marginTop="5dp"
        android:layout_above="@id/tv_tips_t"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">
    </android.support.v7.widget.RecyclerView>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_shadow"
        android:layout_alignTop="@+id/rv_enbleaddr"
        android:layout_alignLeft="@+id/rv_enbleaddr"
        android:layout_alignRight="@+id/rv_enbleaddr"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginBottom="5dp"
        android:background="@color/gray_shadow"
        android:layout_below="@+id/rv_enbleaddr"
        android:layout_alignLeft="@+id/rv_enbleaddr"
        android:layout_alignRight="@+id/rv_enbleaddr"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_shadow"
        android:layout_alignLeft="@+id/rv_enbleaddr"
        android:layout_alignTop="@+id/rv_enbleaddr"
        android:layout_alignBottom="@+id/rv_enbleaddr"/>
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/gray_shadow"
        android:layout_alignRight="@+id/rv_enbleaddr"
        android:layout_alignTop="@+id/rv_enbleaddr"
        android:layout_alignBottom="@+id/rv_enbleaddr"/>
    <TextView
        android:id="@+id/tv_enbleaddr2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/gray"
        android:padding="5dp"
        android:text="xxx"
        android:textSize="19sp"
        android:layout_below="@id/line1"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:gravity="left"/>
</RelativeLayout>
