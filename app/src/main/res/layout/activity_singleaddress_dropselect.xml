<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/root_dialog"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:visibility="gone"
              android:orientation="vertical">
    <LinearLayout
        android:id="@+id/ll_index1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_add1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="哈哈"
            android:background="@android:color/white"
            android:textColor="@color/gray_text686b72"
            android:textSize="15sp" />
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#cacaca" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_index2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_add2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="哈哈2"
            android:textColor="@color/gray_text686b72"
            android:textSize="15sp" />
        <View
            android:id="@+id/item_line2"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#cacaca" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_index3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_add3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="哈哈3"
            android:textColor="@color/gray_text686b72"
            android:textSize="15sp" />
        <View
            android:id="@+id/item_line3"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="15dp"
            android:background="#cacaca" />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/ll_index4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@android:color/white"
        android:orientation="vertical">
        <TextView
            android:id="@+id/item_add4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:background="@android:color/white"
            android:paddingBottom="10dp"
            android:paddingLeft="20dp"
            android:paddingTop="10dp"
            android:text="哈哈3"
            android:textColor="@color/gray_text686b72"
            android:textSize="15sp" />
    </LinearLayout>
    <View
        android:id="@+id/ll_gray"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#Af7F7F7F" />
</LinearLayout>