<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="100"
    android:background="@color/white">
    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="0dp"
    android:orientation="vertical"
    android:layout_weight="40">
        <com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout
            android:id="@+id/ll_light_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="8dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:background="@drawable/mail_btn_selecter"
            android:gravity="center_horizontal">
            <ImageView
                android:id="@+id/voice_dark"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/voice_dark"/>
            <ImageView
                android:id="@+id/leftrun_dark3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/leftrun_dark" />
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/well" />

        </com.honeywell.honeywellproject.WidgeView.unInterceptLinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="出口指示灯"
            android:textSize="13sp"
            android:layout_marginTop="4dp"
            />
</LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0">
    </LinearLayout>

</LinearLayout>