<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootfreeaddress"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"/>
    <View
        android:id="@+id/line_singleaddress_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_singleaddress_top"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:weightSum="100">

        <LinearLayout
            android:id="@+id/tophave"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white"
            android:paddingTop="4dp"
            android:layout_weight="6.5">
                <TextView
                    android:id="@+id/tv_lamptype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_text686b72"
                    android:text="灯具类型"/>
                <ImageView
                    android:id="@+id/iv_top_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_black_50"/>
        </LinearLayout>
        <ImageView
            android:id="@+id/line_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scaleType="fitXY"
            android:src="@drawable/arrow_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_weight="47.2"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单元地址"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_repeat_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址重复，请重新输入"
                    android:textColor="#ee2134"
                    android:gravity="center"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:textSize="14sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center">
                <com.honeywell.honeywellproject.WidgeView.LongClickButton
                    android:id="@+id/iv_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ledview_clock_bg"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/less_110"/>
                <TextView
                    android:id="@+id/ledview_clock_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:layout_centerInParent="true"
                    android:textSize="50sp"/>
                <EditText
                    android:id="@+id/ledview_clock_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:background="@null"
                    android:maxLength="4"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:layout_centerInParent="true"
                    android:textSize="50sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#b8b8b8"
                    android:layout_below="@+id/iv_less"
                    android:layout_alignLeft="@+id/ledview_clock_bg"
                    android:layout_alignRight="@+id/ledview_clock_bg"
                    android:layout_marginTop="@dimen/dp_4"
                    />
                <com.honeywell.honeywellproject.WidgeView.LongClickButton
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_toRightOf="@+id/ledview_clock_bg"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/add_110"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
                <LinearLayout
                    android:id="@+id/btn_singleaddr_write"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="horizontal"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp"
                    android:background="@drawable/bg_singleaddr_read"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bianxie_40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="编写地址"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="46.3"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="8dp"
            android:layout_marginRight="15dp">
            <TextView
                android:id="@+id/tv_enbleaddr2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:layout_gravity="left"
                android:paddingLeft="@dimen/dp_4"
                android:text="日志记录："
                android:textColor="#ff7827"
                android:background="@android:color/white"
                android:layout_weight="0.8"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#b8b8b8"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:orientation="vertical"
                android:background="@android:color/white"
                android:layout_weight="5">
                <ScrollView
                    android:id="@+id/scroll_singleaddr_log"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_4"
                    android:layout_marginLeft="@dimen/dp_4">
                    <TextView
                        android:id="@+id/tv_singleaddr_log"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:lineSpacingExtra="5dp"
                        android:letterSpacing="0.05"
                        android:textSize="15sp"
                        android:textColor="@color/gray_text686b72"
                        android:layout_gravity="left"/>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/activity_el_dropselect"/>

</RelativeLayout>
