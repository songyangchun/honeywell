<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/com.honeywell.honeywellproject"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toolbar"
    app:titleTextColor="@color/gray_shadow"
    android:layout_width="match_parent"
    android:layout_height="?attr/actionBarSize"
    android:background="#f9f9f9"
    android:paddingTop="22dp"
    app:layout_scrollFlags="scroll|enterAlways"
    style="@style/mToolbarStyle"
    app:popupTheme="@style/MenuStyle">
    <!--自定义toolbar的title 和subtitle -->


    <TextView
        android:id="@+id/toolbar_title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="18sp"
        android:text="title"
        android:scrollHorizontally="true"
        android:textColor="#686b72"
        android:layout_gravity="center" />
    <TextView
        android:id="@+id/toolbar_subtitle"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textColor="#686b72"
        android:textSize="16sp"
        android:text="subtitle"
        android:paddingRight="12dp"
        android:paddingTop="8dp"
        android:paddingBottom="6dp"
        android:layout_gravity="right" />
    <TextView
        android:id="@+id/toolbar_sub2title"
        style="@style/TextAppearance.AppCompat.Widget.ActionBar.Subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:lines="1"
        android:ellipsize="end"
        android:textSize="16sp"
        android:text="sub2title"
        android:scrollHorizontally="true"
        android:textColor="#686b72"/>
</android.support.v7.widget.Toolbar>