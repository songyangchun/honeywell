<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <include layout="@layout/toolbar_layout"/>
    <View
        android:id="@+id/line_singleaddress_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/line_singleaddress_top"
        android:background="#f8f8f8"
        android:orientation="vertical"
        android:weightSum="100">

        <include layout="@layout/activity_singleaddress_blehead"
                 android:layout_width="match_parent"
                 android:layout_height="0dp"
                 android:layout_weight="6.5"/>
        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="#b8b8b8"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@android:color/white"
            android:layout_marginTop="2dp"
            android:layout_weight="6.7"
            android:weightSum="3"
            >
            <LinearLayout
                android:id="@+id/top1"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_devicetype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_text686b72"
                    android:text="设备类型"/>
                <ImageView
                    android:id="@+id/iv_top1_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_black_50"/>
            </LinearLayout>
            <View android:layout_width="1dp"
                  android:layout_height="12dp"
                  android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/top2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_protocoltype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_text686b72"
                    android:text="协议类型"/>
                <ImageView
                    android:id="@+id/iv_top2_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_black_50"/>
            </LinearLayout>
            <View android:layout_width="1dp"
                  android:layout_height="12dp"
                  android:background="@android:color/darker_gray"/>
            <LinearLayout
                android:id="@+id/top3"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_weight="1">
                <TextView
                    android:id="@+id/tv_addressaddnum"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:textColor="@color/gray_text686b72"
                    android:text="地址累加"/>
                <ImageView
                    android:id="@+id/iv_top3_arrow"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/arrow_up_black_50"/>
            </LinearLayout>
        </LinearLayout>
        <ImageView
            android:id="@+id/line_singleaddress_arrow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/arrow_line"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:background="@android:color/white"
            android:layout_weight="40.5"
            android:layout_marginTop="18dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="bottom">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="单元地址"
                    android:layout_gravity="center_horizontal"
                    android:textSize="18sp"/>
                <TextView
                    android:id="@+id/tv_repeat_tips"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="地址重复，请重新输入"
                    android:textColor="#ee2134"
                    android:layout_gravity="center_horizontal"
                    android:visibility="invisible"
                    android:textSize="14sp"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:gravity="center">
                <com.honeywell.honeywellproject.WidgeView.LongClickButton
                    android:id="@+id/iv_less"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_toLeftOf="@+id/ledview_clock_bg"
                    android:layout_marginRight="14dp"
                    android:src="@drawable/less_110"/>
                <TextView
                    android:id="@+id/ledview_clock_bg"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="0000"
                    android:visibility="invisible"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:layout_centerInParent="true"
                    android:textSize="50sp"/>
                <EditText
                    android:id="@+id/ledview_clock_time"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textColor="@color/gray"
                    android:background="@null"
                    android:maxLength="4"
                    android:digits="0123456789"
                    android:inputType="number"
                    android:layout_centerInParent="true"
                    android:textSize="50sp"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/gray"
                    android:layout_below="@+id/iv_less"
                    android:layout_alignLeft="@+id/ledview_clock_bg"
                    android:layout_alignRight="@+id/ledview_clock_bg"
                    android:layout_marginTop="@dimen/dp_4"
                    />
                <com.honeywell.honeywellproject.WidgeView.LongClickButton
                    android:id="@+id/iv_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_gravity="left"
                    android:layout_toRightOf="@+id/ledview_clock_bg"
                    android:layout_marginLeft="14dp"
                    android:src="@drawable/add_110"/>
            </RelativeLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.2"
                android:paddingBottom="10dp"
                android:orientation="horizontal">
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
                <LinearLayout
                    android:id="@+id/btn_singleaddr_read"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_singleaddr_read"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/duqu_40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="读取地址"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="4"/>
                <LinearLayout
                    android:id="@+id/btn_singleaddr_write"
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:layout_marginTop="12dp"
                    android:layout_marginBottom="12dp"
                    android:background="@drawable/bg_singleaddr_read"
                    android:gravity="center">
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/bianxie_40"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="14sp"
                        android:text="编写地址"/>
                </LinearLayout>
                <View
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                </View>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_rv"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="vertical"
            android:layout_weight="46.3"
            android:background="@color/white"
            android:layout_marginBottom="10dp"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:gravity="center"
                android:paddingBottom="6dp"
                android:orientation="vertical">
                <RadioGroup
                    android:id="@+id/radiogroup"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="top"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/btn1"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="1-50"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn2"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="51-100"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn3"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="101-150"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn4"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="151-200"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:textSize="14sp" />

                    <RadioButton
                        android:id="@+id/btn5"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="@dimen/dp_4"
                        android:layout_marginRight="@dimen/dp_4"
                        android:layout_weight="1"
                        android:background="@drawable/radiobutton_background"
                        android:button="@null"
                        android:gravity="center"
                        android:text="201-239"
                        android:textColor="@drawable/radiobutton_textcolor"
                        android:textSize="14sp" />
                </RadioGroup>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="@dimen/dp_4"
                android:background="#b8b8b8"/>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/rv_addr"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>
        </LinearLayout>
    </LinearLayout>

    <include layout="@layout/activity_singleaddress_dropselect"/>

</RelativeLayout>
