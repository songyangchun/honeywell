<?xml version="1.0" encoding="utf-8"?>
<com.honeywell.honeywellproject.WidgeView.SwipeItemLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/swipeitemlayout"
    android:layout_marginTop="@dimen/dp_10"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:id="@+id/rootrl_fathertask"
        app:layout_itemType="main"
        android:background="@drawable/bg_shadow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <CheckBox
            android:id="@+id/iv_check"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:background="@drawable/checkbox_bg_shape"
            android:button="@null"
            android:layout_marginLeft="-32dp"
            android:layout_centerVertical="true"/>
        <RelativeLayout
            android:id="@+id/rl_fathertask_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="4dp"
            android:paddingTop="4dp">
            <TextView
                android:id="@+id/xinghao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:visibility="invisible"
                android:paddingTop="3dp"
                android:textColor="@color/red_textee3124"
                android:layout_marginLeft="6dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:textSize="15sp"/>
            <TextView
                android:id="@+id/tv_name1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="回路编号："
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/xinghao"
                android:textSize="14sp"/>
            <EditText
                android:id="@+id/tv_name2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="左滑点击编辑输入回路编号"
                android:background="@null"
                android:focusable="false"
                android:clickable="false"
                android:longClickable="false"
                android:cursorVisible="false"
                android:enabled="false"
                android:textSize="14sp"
                android:digits="0123456789"
                android:layout_centerVertical="true"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/tv_name1"
                android:textColor="#e93d3d"/>

            <ImageView
                android:id="@+id/iv_flod_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:paddingRight="@dimen/dp_10"
                android:paddingLeft="@dimen/dp_10"
                android:src="@drawable/arrow_down_60"/>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl_fathertask_fold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="visible"
            android:layout_below="@+id/rl_fathertask_top">
            <View
                android:id="@+id/line_divider"
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="@color/gray_shadow"
                android:layout_alignParentTop="true"/>
            <TextView
                android:id="@+id/xinghao2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="*"
                android:visibility="invisible"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="6dp"/>
            <TextView
                android:id="@+id/tv_data1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="日期："
                android:layout_below="@+id/line_divider"
                android:layout_toRightOf="@+id/xinghao2"
                android:layout_marginLeft="6dp"
                android:layout_marginTop="6dp"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_data2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2017-12-26 13:30"
                android:layout_alignTop="@+id/tv_data1"
                android:layout_toRightOf="@+id/tv_data1"
                android:textSize="14sp"
                android:textColor="@color/black"/>
            <LinearLayout
                android:id="@+id/ll_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:layout_below="@+id/tv_data1"
                android:layout_alignLeft="@+id/tv_data1"
                android:layout_marginTop="6dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/tv_description1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="描述："
                    android:textColor="#686b72"
                    android:layout_gravity="center_vertical"
                    android:textSize="14sp"/>
                <EditText
                    android:id="@+id/tv_description2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="左滑点击编辑输入描述"
                    android:textSize="14sp"
                    android:focusable="false"
                    android:longClickable="false"
                    android:cursorVisible="false"
                    android:clickable="false"
                    android:background="@null"
                    android:layout_gravity="center_vertical"
                    android:textColor="@color/black"/>
            </LinearLayout>
            <TextView
                android:id="@+id/tv_amount1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="模块探头数量："
                android:layout_below="@+id/ll_description"
                android:layout_alignLeft="@+id/ll_description"
                android:layout_marginTop="6dp"
                android:layout_marginBottom="@dimen/dp_10"
                android:textColor="#c8c8c8"
                android:textSize="14sp"/>
            <TextView
                android:id="@+id/tv_amount2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_toRightOf="@+id/tv_amount1"
                android:layout_alignTop="@+id/tv_amount1"
                android:textSize="14sp"
                android:textColor="#c8c8c8"/>
        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="4dp"
            android:layout_marginLeft="-35dp"
            android:layout_below="@+id/rl_fathertask_fold"
            android:background="@drawable/background_with_shadow"/>
    </RelativeLayout>
    <Button
        android:id="@+id/edit"
        app:layout_itemType="menu"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="@color/gray"
        android:text="编辑"
        android:textSize="18sp"
        android:textColor="@color/white"/>
    <Button
        android:id="@+id/delete"
        app:layout_itemType="menu"
        android:layout_width="80dp"
        android:layout_height="match_parent"
        android:background="#D54F37"
        android:text="删除"
        android:textSize="18sp"
        android:textColor="@color/white"/>
</com.honeywell.honeywellproject.WidgeView.SwipeItemLayout>