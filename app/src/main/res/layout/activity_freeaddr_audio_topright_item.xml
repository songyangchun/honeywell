<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_audio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/righttop_audio_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        />

        <TextView
            android:id="@+id/tv_audio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/iv_audio"
            android:text="语音提示"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="@dimen/dp_10"
            android:layout_marginBottom="@dimen/dp_10"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"/>

        <com.honeywell.honeywellproject.WidgeView.SwitchButton
            android:id="@+id/switch_button"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="28dp"
            app:sb_checked="false"
            app:sb_show_indicator="false"
            app:sb_checked_color="@color/red"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/tv_audio"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_shadow"/>
</RelativeLayout>