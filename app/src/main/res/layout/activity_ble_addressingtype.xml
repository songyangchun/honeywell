<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.honeywell.honeywellproject.InitWellComeModule.BleOrElSelectActivity">

    <include layout="@layout/toolbar_layout"/>
    <View
        android:id="@+id/line_addressingtype_top"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@color/white"
        android:weightSum="100"
        android:layout_below="@+id/line_addressingtype_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="6"
            android:orientation="vertical">
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="47"
            android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="批量编址"
            android:textStyle="bold"
            android:textColor="@color/gray_text"
            android:textSize="@dimen/sp_16"
            android:layout_marginLeft="38dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#b8b8b8"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"/>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginLeft="44dp"
                android:gravity="center_horizontal">
                <ImageView
                    android:id="@+id/btn_batch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/piliang_215"
                    android:layout_marginTop="24dp"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="批量编址"
                    android:textColor="@color/gray_text"
                    android:layout_marginTop="6dp"
                    android:textSize="@dimen/sp_16"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="47"
            android:orientation="vertical">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="单个编址"
                android:textStyle="bold"
                android:textColor="@color/gray_text"
                android:textSize="@dimen/sp_16"
                android:layout_marginLeft="38dp"/>
            <View
                android:layout_width="wrap_content"
                android:layout_height="1dp"
                android:background="#b8b8b8"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="28dp"
                android:layout_marginRight="28dp"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginLeft="44dp"
                    android:gravity="left">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/btn_unmemory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/free_215"
                            android:layout_marginTop="24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="自由编址"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="6dp"
                            android:textSize="@dimen/sp_16"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_weight="1"
                    android:layout_marginRight="44dp"
                    android:gravity="right">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">
                        <ImageView
                            android:id="@+id/btn_memory"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@drawable/engineer_215"
                            android:layout_marginTop="24dp"/>
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="工程编址"
                            android:textColor="@color/gray_text"
                            android:layout_marginTop="6dp"
                            android:textSize="@dimen/sp_16"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</RelativeLayout>
