<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray_shadow_shadow">

    <include layout="@layout/toolbar_layout"/>

    <View
        android:id="@+id/line_modifypassword"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>

    <LinearLayout
        android:id="@+id/ll_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:background="@color/white"
        android:layout_below="@+id/line_modifypassword"
        android:layout_marginTop="25dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="用户名："
            android:textColor="@color/black"
            android:textSize="20sp"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_username"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入用户名"
            android:textColor="@color/black"
            android:background="@null"
            android:layout_weight="5"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_useroldpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_username"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="原密码："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_useroldpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="默认密码/原密码"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_weight="5"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_usernewpassword"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_useroldpassword"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="新密码："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_usernewpassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请输入新密码"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_weight="5"/>

    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_usernewpassword2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:orientation="horizontal"
        android:layout_below="@+id/ll_usernewpassword"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:padding="10dp"
        android:gravity="center">
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="2"
            android:text="确认："
            android:textSize="20sp"
            android:textColor="@color/black"
            android:gravity="center"/>
        <EditText
            android:id="@+id/et_usernewpassword2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="请再次输入新密码"
            android:background="@null"
            android:textColor="@color/black"
            android:layout_weight="5"/>

    </LinearLayout>

    <Button
        android:id="@+id/btn_confirm"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_margin="20dp"
        android:orientation="vertical"
        android:background="@drawable/btn_login"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/ll_usernewpassword2"
        android:text="确认"
        android:textSize="22sp"
        android:gravity="center"
        android:textColor="@color/white"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/useknowel"
        android:layout_margin="20dp"
        android:textSize="16sp"
        android:textColor="@color/gray"
        android:layout_below="@+id/btn_confirm"
        android:gravity="left"/>
</RelativeLayout>
