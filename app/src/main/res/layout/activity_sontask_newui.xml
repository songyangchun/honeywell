<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f9f9f9">
    <include layout="@layout/toolbar_layout"/>

    <View
        android:id="@+id/son_line1"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_below="@+id/toolbar"/>

    <com.honeywell.honeywellproject.WidgeView.SoftInputRelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:layout_below="@+id/son_line1"
        android:layout_above="@+id/line_bottom">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sontask"
            android:dividerHeight="0dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="4dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"/>
        <TextView
            android:id="@+id/view_empty"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="暂无序列号。"
            android:textSize="18sp"
            android:gravity="center"
            android:visibility="gone"/>
    </com.honeywell.honeywellproject.WidgeView.SoftInputRelativeLayout>


    <View
        android:id="@+id/line_bottom"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#b8b8b8"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="54dp"/>

    <LinearLayout
        android:id="@+id/ll_bottom1"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:layout_alignParentBottom="true">
        <LinearLayout
            android:id="@+id/ll_bianzhi"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center"
            android:paddingLeft="30dp"
            android:layout_weight="1">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/bianzhi_black_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="编址"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/ll_saomiao"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:paddingRight="30dp"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_weight="1">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/saomiao_tianjia_black_50"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="扫描"/>

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/ll_bottom2"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="54dp"
        android:background="@color/white"
        android:visibility="gone"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/tv_selectall"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="全选"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_delete"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:text="删除"
            android:layout_weight="1"
            android:textColor="@color/gray"
            android:textSize="20sp"
            android:gravity="center"/>
    </LinearLayout>

</RelativeLayout>