<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/ll_root"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="43dp"
    android:background="@color/white">
    <ImageView
        android:id="@+id/image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/righttop_lishi_50"
        android:layout_centerVertical="true"
        android:layout_marginLeft="8dp"
        />
        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="当前驱动"
            android:textColor="@color/gray_text686b72"
            android:textSize="16sp"
            android:layout_marginLeft="8dp"
            android:layout_alignTop="@+id/tv_drive"
            android:layout_toRightOf="@+id/image"
            android:layout_toEndOf="@+id/image" />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_alignLeft="@+id/name"
        android:layout_alignParentBottom="true"
        android:background="@color/gray_shadow"/>

    <TextView
        android:id="@+id/tv_drive"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="无驱动"
        android:textSize="16sp"
        android:layout_marginRight="12dp"
        android:textColor="@color/red_textee3124"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />
</RelativeLayout>