        <!--<item name="android:backgroundDimEnabled">false</item>-->
    <!--</style>-->

    <!--自定义列表dialog -->
    <style name="Custom_ListDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@drawable/edittext_bg</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <!--<item name="android:windowFrame">@null</item>-->
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--背景是否变暗-->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:textAppearance">@style/Base.DialogWindowTitle.AppCompat</item>
    </style>

    <style name="ReadmeDialog" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">true</item>
        <!--是否半透明-->
        <item name="android:windowIsTranslucent">true</item>

        <item name="android:background">#00000000</item>
    </style>
    <!-- 稍微修改系统自带的dialog -->
    <style name="progressDialog" parent="@android:style/Theme.Material.Light.Dialog">
        <item name="android:textSize">14sp</item>
    </style>

    <style name="J_Dialog_Style">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowIsTranslucent">false</item><!--半透明-->
        <item name="android:windowContentOverlay">@null</item>
    </style>

    <style name="J_DIalog_Style_Dim_enable" parent="J_Dialog_Style">
        <item name="android:backgroundDimEnabled">true</item><!--模糊-->
    </style>

    <style name="J_DIalog_Style_Dim_disable" parent="J_Dialog_Style">
        <item name="android:backgroundDimEnabled">false</item><!--模糊-->
    </style>

    //设置透明Theme

    <style name="AppStartLoadTranslucent" parent="android:Theme">
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    ​<!-- 自定义loading -->
    <style name="CustomDialog" parent="Theme.AppCompat.Dialog">
        <item name="android:backgroundDimEnabled">false</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>​

</resources>
